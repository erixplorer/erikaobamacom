---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ArticlePost from '../../../components/collections/ArticlePost.astro';
import { getCollection } from "astro:content";


export async function getStaticPaths() {
  const allPosts = await getCollection("portfolio");
  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.tags.includes(tag)
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;

---
<BaseLayout pageTitle={tag}>
  <div class="wrapper animate-fade">
		<ul class="article-list">
      {
        posts.map((post) => (
          <ArticlePost url=`../${post.id}` title={post.data.title} image={post.data.image} tags={post.data.tags}/>
        ))
      }
    </ul>
  </div>
</BaseLayout>